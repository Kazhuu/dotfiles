[core]
    pager = delta
    editor = vim
    excludesFile = ~/.gitignore

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[pull]
    rebase = true
[init]
	defaultBranch = main
[push]
    autoSetupRemote = true
